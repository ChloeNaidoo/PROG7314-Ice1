<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/emailInput" android:hint="Email" />
    <EditText android:id="@+id/passwordInput" android:hint="Password" android:inputType="textPassword" />
    <Button android:id="@+id/registerButton" android:text="Register" />
    <TextView android:id="@+id/loginRedirect" android:text="Already have an account? Login here" />
</LinearLayout>
