<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/emailInput" android:hint="Email" />
    <EditText android:id="@+id/passwordInput" android:hint="Password" android:inputType="textPassword" />
    <Button android:id="@+id/loginButton" android:text="Login" />
    <TextView android:id="@+id/registerRedirect" android:text="No account? Register here" />
</LinearLayout>
