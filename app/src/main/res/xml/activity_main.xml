<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.snakeice2025.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button android:id="@+id/btnLeft" android:text="←" />
        <Button android:id="@+id/btnUp" android:text="↑" />
        <Button android:id="@+id/btnDown" android:text="↓" />
        <Button android:id="@+id/btnRight" android:text="→" />
        <Button android:id="@+id/btnLeaderboard" android:text="🏆" />
    </LinearLayout>
</LinearLayout>
